#This Setup file is used by the setup.py script to configure the
#python extensions. You will likely use the "config.py" which will
#build a correct Setup file for you based on your system settings.
#If not, the format is simple enough to edit by hand. First change
#the needed commandline flags for each dependency, then comment out
#any unavailable optional modules in the first optional section.


#--StartConfig
SDL = -I/usr/include -D_REENTRANT -DSDL2 -lSDL2
FONT = -lSDL2_ttf
IMAGE = -lSDL2_image
MIXER = -lSDL2_mixer
PNG = -lpng
JPEG = -ljpeg
SCRAP = -lX11
PORTMIDI = -lportmidi
PORTTIME = -lporttime
FREETYPE = -lfreetype
#--EndConfig

DEBUG =

#the following modules are optional. you will want to compile
#everything you can, but you can ignore ones you don't have
#dependencies for, just comment them out

imageext src/image/imageext.c  $(SDL) $(IMAGE) $(PNG) $(JPEG) $(DEBUG)
font src/font/font.c  $(SDL) $(FONT) $(DEBUG)
mixer src/mixer/mixer.c  $(SDL) $(MIXER) $(DEBUG)
mixer_music src/mixer/music.c  $(SDL) $(MIXER) $(DEBUG)
scrap src/scrap/scrap.c  $(SDL) $(SCRAP) $(DEBUG)
pypm src/pypm/pypm.c  $(SDL) $(PORTMIDI) $(PORTTIME) $(DEBUG)

_sdl2.sdl2 src/_sdl2/sdl2/sdl2.c  $(SDL) $(DEBUG) -Isrc_c
_sdl2.audio src/_sdl2/audio/audio.c  $(SDL) $(DEBUG) -Isrc_c
_sdl2.video src/_sdl2/video/video.c src_c/pgcompat.c  $(SDL) $(DEBUG) -Isrc_c
_sdl2.mixer src/_sdl2/mixer/mixer.c  $(SDL) $(MIXER) $(DEBUG) -Isrc_c
_sdl2.touch src/_sdl2/touch/touch.c  $(SDL) $(DEBUG) -Isrc_c
_sdl2.controller_old src/_sdl2/controller/controller_old.c  $(SDL) $(DEBUG) -Isrc_c

GFX = src/gfxdraw/SDL_gfx/SDL_gfxPrimitives.c
#GFX = src_c/SDL_gfx/SDL_gfxBlitFunc.c src_c/SDL_gfx/SDL_gfxPrimitives.c
gfxdraw src/gfxdraw/gfxdraw.c  $(SDL) $(GFX) $(DEBUG)

#optional freetype module (do not break in multiple lines
#or the configuration script will choke!)
_freetype src/freetype/freetype/ft_cache.c src/freetype/freetype/ft_wrap.c src/freetype/freetype/ft_render.c src/freetype/freetype/ft_render_cb.c src/freetype/freetype/ft_layout.c src/freetype/freetype/ft_unicode.c src/freetype/_freetype.c  $(SDL) $(FREETYPE) $(DEBUG)

_sprite src/_sprite/_sprite.c  $(SDL) $(DEBUG)

#these modules are required for pygame to run. they only require
#SDL as a dependency. these should not be altered

base src/base/base.c  $(SDL) $(DEBUG)
color src/color/color.c  $(SDL) $(DEBUG)
constants src/locals/constants.c  $(SDL) $(DEBUG)
display src/display/display.c  $(SDL) $(DEBUG)
event src/event/event.c  $(SDL) $(DEBUG)
key src/key/key.c  $(SDL) $(DEBUG)
mouse src/mouse/mouse.c  $(SDL) $(DEBUG)
rect src/rect/rect.c src/rect/pgcompat_rect.c  $(SDL) $(DEBUG)
rwobject src/base/rwobject.c  $(SDL) $(DEBUG)
surface src/surface/simd_blitters_sse2.c src/surface/simd_blitters_avx2.c src/surface/surface.c src/surface/alphablit.c src/surface/surface_fill.c  $(SDL) $(DEBUG)
surflock src/surf/surflock.c  $(SDL) $(DEBUG)
time src/time/time.c  $(SDL) $(DEBUG)
joystick src/joystick/joystick.c  $(SDL) $(DEBUG)
draw src/draw/draw.c  $(SDL) $(DEBUG)
image src/image/image.c  $(SDL) $(DEBUG)
transform src/transform/transform.c src/transform/rotozoom.c src/transform/scale2x.c src/transform/scale_mmx.c  $(SDL) $(DEBUG)
mask src/mask/mask.c src/mask/bitmask.c  $(SDL) $(DEBUG)
bufferproxy src/bufferproxy/bufferproxy.c  $(SDL) $(DEBUG)
pixelarray src/pixelarray/pixelarray.c  $(SDL) $(DEBUG)
math src/math/math.c  $(SDL) $(DEBUG)
pixelcopy src/pixelcopy/pixelcopy.c  $(SDL) $(DEBUG)
newbuffer src/newbuffer/newbuffer.c  $(SDL) $(DEBUG)
system src/system/system.c  $(SDL) $(DEBUG)
_window src/window/window.c  $(SDL) $(DEBUG)
